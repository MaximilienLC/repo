FROM nvcr.io/nvidia/cuda:12.8.1-cudnn-devel-ubuntu24.04

RUN apt update && apt install -y python3-pip swig && rm -rf /var/lib/apt/lists/*

RUN python3 -m pip install --no-cache-dir torch numpy einops jaxtyping datasets scikit-learn matplotlib gymnasium[classic-control,box2d] --break-system-packages
